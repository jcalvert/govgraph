<h1>Listing bills</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Version</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= bill.name %></td>
    <td><%= bill.code %></td>
    <td><%= bill.version %></td>
    <td><%= bill.text %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

